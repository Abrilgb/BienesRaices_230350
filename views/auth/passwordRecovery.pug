extends ../layout/index

block contenido
    div.py-10 
        h2.text-center.font-extrabold.my-10.text-4xl.text-brown-200 Bienes   
            span.font-normal.text-brown-100 Raices  
        h2.text-center.font-extrabold.text-2xl.text-white= page  

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    // Verifica si error tiene la propiedad 'msg'
                    if error.msg
                        div(class="bg-brown-200 text-white p-4 rounded-md flex items-center justify-between mb-2")
                            p(class="text-sm font-bold")= error.msg
                            button(class="ml-2 bg-transparent border-0 text-white" onclick="this.parentElement.style.display='none'") &times;

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-lg.rounded-lg
                form(method="POST" action="/auth/passwordRecovery" noValidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-brown-200.mb-2.font-bold Email de Registro: 
                        input#email.w-full.px-3.py-2.border-2.border-green-100.rounded-md(type="email" placeholder="Ej. usuario@matequilla.com" name="correo_usuario")
                    div.flex.items-center.justify-between
                        a.text-green-100.text-xs(href="/auth/login" class="hover:underline decoration-2 hover:decoration-brown-100") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-green-100.text-xs(href="/auth/createAccount" class="hover:underline decoration-2 hover:decoration-brown-100") ¿No tienes cuenta? Regístrate
                    input(class="w-full bg-brown-200 hover:bg-green-100 text-white font-bold py-3 cursor-pointer rounded-lg " type="submit" value="Recuperar Contraseña")

    script.
        document.querySelectorAll('.bg-red').forEach(error => {
            setTimeout(() => {
                error.style.display = 'none';
            }, 7000); 
        });
