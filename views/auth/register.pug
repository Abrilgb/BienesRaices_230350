extends ../layout/index

block contenido
    div.py-10
        h2.text-center.font-extrabold.my-10.text-4xl.text-indigo-600 Bienes 
            span.font-normal.text-black Raices
        h2.text-center.font-extrabold.text-2xl= page

        .mt-8.mx-auto.max-w-md  
            .bg-white.py-8.px-4.shadow
                form(action="/auth/register" method="POST").space-y-5.px-6
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Nombre completo:
                        input#nombre.w-full.px-3.border.border-gray-300.rounded-lg.border-2(type="text" placeholder="Nombre con apellidos" name="nombre_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Correo electrónico:
                        input#correo.w-full.px-3.border.border-gray-300.rounded-lg.border-2(type="email" placeholder="aguzm347@gmail.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Contraseña:
                        input#password.w-full.px-3.border.border-gray-300.rounded-lg.border-2(type="password" placeholder="Insertar mínimo 6 caracteres" name="contraseña_usuario")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Confirmar contraseña:
                        input#passwordU.w-full.px-3.border.border-gray-300.rounded-lg.border-2(type="password" placeholder="Contraseña" name="validacion_contraseña")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="./auth/login" class="hover:underline decoration-2 underline-offset-2 text-red-600") ¿Ya tienes una cuenta? Inicia sesión
                        a.text-brown-200.text-xs(href="./auth/passwordRecovery" class="hover:underline decoration-2 underline-offset-2 text-brown-200") ¿Olvidaste tu contraseña? Recupérala

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white font-bold py-2 cursor-pointer" type="submit" value="Crear cuenta")
